@using Fshop.Models;
@model IList<About>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Danh sách dịch vụ</h2>
    </div>
    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="About" asp-action="Create">
            <i class="bi bi-file-earmark-text me-1">Thêm dịch vụ</i>
        </a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">#</th>
                                    <th class="col-3 text-center">Tiêu đề</th>
                                    <th class="col-2 text-center">Biểu tượng</th>
                                    <th class="col-4 text-center">Mô tả</th>
                                    <th class="col-1 text-center">Trạng thái</th>
                                    <th class="col-1 text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th class="text-center" scope="row"> @item.FeaturesID</th>
                                        <td><a asp-area="Admin" asp-controller="About" asp-action="Details" asp-route-id="@item.FeaturesID" class="text-primary">@item.FeaturesTitle</a></td>
                                        <td class="text-center">@item.FeaturesIcon</td>
                                        <td>@item.Description</td>
                                        <td class="text-center">@item.IsActive</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="About" asp-action="Edit" asp-route-id="@item.FeaturesID"
                                               class="btn btn-primary btn-sm" title="Sửa dịch vụ"><i class="bi bi-pencil"></i></a>

                                            <a asp-area="Admin" asp-controller="About" asp-action="Delete" asp-route-id="@item.FeaturesID"
                                               class="btn btn-danger btn-sm" title="Xóa dịch vụ"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>